# ~/.bash_profile - macOS login shell configuration
# This file is sourced for login shells (which is the default in Terminal/iTerm2)

# Source .bashrc if it exists (keeps all config in one place)
if [ -f ~/.bashrc ]; then
    source ~/.bashrc
fi

# Homebrew setup (Apple Silicon Macs)
if [ -f /opt/homebrew/bin/brew ]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
fi

# Add Homebrew bash completions if available
if type brew &>/dev/null; then
    HOMEBREW_PREFIX="$(brew --prefix)"
    if [[ -r "${HOMEBREW_PREFIX}/etc/profile.d/bash_completion.sh" ]]; then
        source "${HOMEBREW_PREFIX}/etc/profile.d/bash_completion.sh"
    fi
fi
