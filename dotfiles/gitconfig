[user]
	email = mackall.tom@gmail.com
	name = Thomas Mackall

[init]
	defaultBranch = main

[core]
	editor = vim
	packedGitLimit = 1g
	packedGitWindowSize = 1g

[color]
	ui = auto

[color "status"]
	added = yellow bold
	changed = green bold
	untracked = white bold

[color "branch"]
	current = yellow reverse
	local = yellow bold
	remote = green bold

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red reverse
	new = green bold

[diff]
	colorMoved = default
	algorithm = histogram

[merge]
	tool = vimdiff
	conflictstyle = zdiff3

[pull]
	rebase = false

[push]
	default = current
	autoSetupRemote = true

[fetch]
	prune = true
	prunetags = true

[pack]
	deltaCacheSize = 1g
	packSizeLimit = 1g
	windowMemory = 1g

[rerere]
	enabled = true

[help]
	autocorrect = prompt

[column]
	ui = auto

[branch]
	sort = -committerdate

[tag]
	sort = -version:refname

[commit]
	gpgsign = false

[credential]
	helper = store

[alias]
	# Basics
	br = branch
	ci = commit
	co = checkout
	st = status
	sw = switch

	# Fetch/pull
	fp = fetch --prune
	up = !git fetch origin -v && git merge origin/$(git rev-parse --abbrev-ref HEAD)

	# Logging
	lg = log --oneline --graph --decorate -20
	lga = log --oneline --graph --decorate --all -30
	last = log -1 HEAD --stat

	# File operations
	ls = ls-files
	lso = ls-files --others --exclude-standard
	ff = log --all --full-history --

	# Remote
	so = remote show origin
	sh = show-branch

	# Hide/unhide files from tracking
	hide = update-index --assume-unchanged
	unhide = update-index --no-assume-unchanged
	hidden = !git ls-files -v | grep '^h' | cut -c3-

	# Undo helpers
	undo = reset --soft HEAD~1
	unstage = reset HEAD --
	discard = checkout --
	amend = commit --amend --no-edit

	# Stash shortcuts
	stash-all = stash push --include-untracked
	pop = stash pop

	# Cleanup
	cleanup = !git branch --merged | grep -v '\\*\\|main\\|master' | xargs -n 1 git branch -d
[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
